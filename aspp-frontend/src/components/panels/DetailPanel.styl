.detail-panel {
  user-select none

  .code {
    white-space pre
    line-height 1.3
    font-size 18px
    margin 8px 0

    > p {
      margin 0 0
    }

    .rich.string {
      font-weight bold
      color #2b7e18
      .pt-dark & {
        color #a5c261
      }
    }

    .rich.number {
      color #0c38f9
      .pt-dark & {
        color #6897bb
      }
    }

    .rich.reserved {
      color #666
    }
  }
}

.block.preview {
  margin-top 0

  &:hover {
    outline none
  }

  > span {
    margin-left 4px

    &.text {
      display none
    }
  }
}
