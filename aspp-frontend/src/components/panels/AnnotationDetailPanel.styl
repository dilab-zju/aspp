.panel {
  h2 {
    font-weight normal
    margin 8px 0
  }
}

.annotation-detail-panel {
  user-select none
  .part {
    margin 0 8px
  }

  .code {
    background #ccc
    padding 8px
    margin 0 -8px
    white-space pre
    line-height 1.3
    font-size 1.5rem

    > p {
      margin 0 0
    }

    .string {
      font-weight bold
      color #2b7e18
    }

    .number {
      color #0c38f9
    }

    .reserved {
      color #666
    }
  }

  .accept-button {
    margin-left 16px
    font-size 14px
    background green
    color white
  }

  .deny-button {
    margin-left 4px
    font-size 14px
    background red
    color white
  }

  .edit-button {
    margin-left 4px
    font-size 14px
  }
}

.block.sparse {
  line-height 2
  > span {
    margin-left 6px
    &:first-child {
      margin-left 2px
    }
  }
}
