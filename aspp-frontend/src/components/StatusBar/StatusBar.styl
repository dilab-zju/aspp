.status-bar {
  grid-area status-bar
  display flex
  height 22px
  padding 0 4px
  color #9da5b4
  background-color #21252b

  p {
    margin 0
    line-height @height
  }

  .left {
    display flex
  }

  .right {
    margin-left auto
  }

  .item {
    padding 0 8px
  }

  .button {
    padding 0 8px
    cursor pointer
    &:hover {
      background-color #2c313a
    }
    &:active {
      background-color rgba(255, 255, 255, 0.18)
    }
  }
}
