$menubar-height = 22px

.menubar {
  grid-area menubar
  display flex
  align-items stretch
  background #21252b
  outline none
  z-index 1
  padding 0 10px

  .category {
    position relative
    line-height $menubar-height

    .title {
      padding 0 8px
      color #9da5b4
      cursor pointer
      &:hover {
        background-color #2c313a
      }
      &:active {
        background-color rgba(255, 255, 255, 0.18)
      }
      &.active {
        color black
        background-color white
      }
    }

    .menu-item-list {
      position absolute
      margin 0
      padding 0
      top 100%
      left 0
      list-style none
      width 200px
      background white
      .seprator {
        margin: 0;
        border: none;
        border-bottom: 1px solid #cccccc;
      }
      .menu-item {
        display flex
        padding 0 8px
        height 32px
        cursor pointer
        transition background 250ms
        &:hover {
          background rgba(34, 38, 44, 0.161)
        }
        &.disabled {
          color gray
          background inherit
          cursor default
        }

        > p {
          margin 0
          line-height @height
        }
        .hint {
          margin-left auto
          color gray
        }
      }
    }
  }
}
