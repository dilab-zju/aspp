.block .annotation {
  cursor pointer

  &[data-height="0"] {
    &:hover {
      outline 1px solid #666
    }

    &.selected
    &.selected:hover {
      box-shadow #616161 1px 1px 10px 0.5px
      background #ffe500
    }
  }

  &[data-height="1"] {
    &:hover {
      outline 1px solid #666
      outline-offset 2px
    }

    &.selected
    &.selected:hover {
      box-shadow rgba(128, 128, 128, 0.3) 0px 0px 10px 3px
      background #fff9c5
    }
  }

  &[data-height="2"],
  &[data-height="3"],
  &[data-height="4"] {
    &.selected {
      outline 1px dashed #666
    }
  }

  &[data-height="2"].selected {
    outline-offset 4px
  }
  &[data-height="3"].selected {
    outline-offset 6px
  }
  &[data-height="4"].selected {
    outline-offset 8px
  }

}
