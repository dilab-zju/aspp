.annotation-editor {
  display flex
  flex-direction column
  cursor default

  .editor {
    font-size 16px
    font-family consolas, 'Microsoft Yahei', sans-serif
    padding 8px
    border-top 1px solid #d4d6d9
    overflow auto

    ::selection {
      background #ffdcd4
    }
  }

  ::-webkit-scrollbar {
    width 30px
  }

  ::-webkit-scrollbar-track {
    border-left 1px solid #d4d6d9
  }

  ::-webkit-scrollbar-thumb {
    background #9e9e9e
  }
}

.block {
  line-height 1.8
  white-space pre-wrap
  letter-spacing 2px
  margin-top 8px
  &:first-child {
    margin-top 0
  }

  .block-meta {
    display flex
    align-items center
    color #ccc
    user-select none

    > p {
      margin 0
      line-height 24px
    }

    .block-button-group {
      margin-left 8px
      visibility hidden
    }
  }

  .tag-abbr {
    user-select none
    pointer-events none
    font-weight bold
    letter-spacing 0
  }

  &:hover {
    .block-meta {
      color #666
      .block-button-group {
        visibility visible
      }
    }
  }

  .slot.match
  .slot.sentence {
    box-shadow rgba(158, 158, 158, 0.33) 1px 1px 3px 1.5px
    outline 1px solid #ccc
    background #fff9c5
    &.selected {
      background #FFEB3B
    }
  }

  // TODO 优化样式

  .hint {
    border-bottom 1px dotted #192126
    cursor pointer
    &.selected {
      background #fce23c
    }
  }

  //.slot.highlight {
