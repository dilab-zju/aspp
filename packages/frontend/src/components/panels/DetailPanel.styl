.detail-panel {
  user-select none

  .code {
    white-space pre
    line-height 1.3
    font-size 18px
    margin 8px 0

    > p {
      margin 0 0
    }
  }
}

.block.preview {
  margin-top 0

  &:hover {
    outline none
  }

  > span {
    margin-left 4px

    &.text {
      display none
    }
  }
}
