.tag-group-preview {
  margin-top 16px
  &:first-child {
    margin-top 0
  }

  .tag-row {
    display flex
    margin-top 8px
    align-items center

    .annotation {
      margin 0
      padding-left 8px
      margin-right 8px
      font-size 16px
      flex 1 0
      line-height 24px
    }

    .control {
      margin-left auto
      display flex
      align-items center
      label {
        margin 0
      }
    }
  }
}