$sash-width = 4px

.panel-container {
  grid-area panel
  display flex
  flex-flow column
  width 350px
  overflow-y auto
  overflow-x hidden
  position relative
  padding-left $sash-width

  &.minimum {
    writing-mode vertical-rl
    text-align center
    cursor w-resize
    border-left 1px solid #d4d6d9
  }

  .pt-tab-list {
    padding 0 8px
  }

  .pt-tab {
    text-transform uppercase
  }

  .pt-tab-panel {
    overflow auto
    padding 0 8px
  }

  .panel {
    .part-title {
      font-size 20px
      line-height 24px
    }

    .subtitle {
      font-size 18px
      line-height 24px
      margin 0
      font-weight normal
    }
  }
}

.panel-container .sash {
  position absolute
  left 0
  top 0
  bottom 0
  width $sash-width
  cursor w-resize
  border-right $sash-width solid #d4d6d9
  &:hover, &:active {
    border-right-style dashed
  }
}
