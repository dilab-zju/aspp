.panel-container {
  grid-area panel
  display flex
  flex-flow column
  width 350px
  overflow auto
  border-left #d2d6d9 1px solid

  &.hide {
    display none
  }

  .pt-tab-list {
    padding 0 8px
  }

  .pt-tab {
    text-transform uppercase
  }

  .pt-tab-panel {
    overflow auto
    padding 0 8px
  }

  .panel {
    .part-title {
      font-size 20px
      line-height 24px
    }

    .subtitle {
      font-size 18px
      line-height 24px
      margin 0
      font-weight normal
    }
  }
}
