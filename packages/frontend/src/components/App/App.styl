body {
  font-family Consolas, "Microsoft Yahei", sans-serif
}

.no-user-select {
  user-select none
}

.app {
  width 100vw
  height 100vh
  &.pt-dark {
    background #2b3741
  }
}

.app-content {
  height 100%
  display grid
  grid-template-areas "menubar menubar menubar" "file-tree view panel" "status-bar status-bar status-bar"
  grid-template-rows 0fr auto 0fr
  grid-template-columns 0fr auto 0fr
}
