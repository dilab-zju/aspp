$sash-width = 4px

.file-tree {
  grid-area file-tree
  position relative
  display flex
  flex-direction column
  padding-right $sash-width
  overflow-y auto
  overflow-x hidden

  &.minimum {
    writing-mode vertical-lr
    text-align center
    cursor e-resize
    border-right 1px solid #d4d6d9
  }

  > header {
    flex-shrink 0
    display flex
    align-items center
    padding-left 12px
    border-bottom 1px solid #d4d6d9
  }

  .tree {
    overflow auto
  }

  .sash {
    position absolute
    right 0
    top 0
    bottom 0
    width $sash-width
    cursor e-resize
    border-right $sash-width solid #d4d6d9
    &:hover, &:active {
      border-right-style dashed
    }
  }
}
